            <Button fx:id="restartButton" text="Reiniciar" styleClass="button" layoutX="150" layoutY="60"/>
        </HBox>

        <GridPane fx:id="tabuleiroGrid" styleClass="bordaGridPane"
                  VBox.vgrow="ALWAYS">
